<% content_for :title, "チートシート - JapDev" %>

<div class="mb-12 text-center">
  <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
    開発者
    <span
      class="
        bg-gradient-to-r from-emerald-600 to-teal-600 bg-clip-text text-transparent
      "
    >チートシート</span>
  </h2>
  <p class="text-lg text-gray-600 max-w-2xl mx-auto">
    よく使うコードスニペットとリファレンス
  </p>
</div>

<div class="flex justify-between items-center mb-6">
  <h3 class="text-2xl font-bold text-gray-900">カテゴリ一覧</h3>
  <div class="flex gap-3">
    <%= link_to "全カテゴリJSON",
    export_all_json_devsheet_categories_path,
    data: {
      turbo: false,
    },
    class:
      "px-4 py-2 bg-purple-500 text-white rounded-lg font-medium hover:bg-purple-600 transition-all" %>
    <%= link_to "新規カテゴリ",
    new_devsheet_category_path,
    class:
      "px-4 py-2 bg-gradient-to-r from-emerald-500 to-teal-600 text-white rounded-lg font-medium hover:shadow-lg transition-all" %>
  </div>
</div>

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @categories.each do |category| %>
    <div
      class="
        bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-lg
        transition-all hover:border-emerald-200 group
      "
    >
      <div class="flex items-start gap-4 mb-4">
        <div
          class="w-16 h-16 flex items-center justify-center rounded-lg"
          style="background: <%= category.color %>20;"
        >
          <% if category.logo.present? %>
            <%= image_tag category.logo,
            class: "w-10 h-10 object-contain",
            alt: category.name,
            onerror: "this.src='https://via.placeholder.com/48'" %>
          <% else %>
            <div
              class="
                w-12 h-12 rounded-lg flex items-center justify-center text-white font-bold
                text-xl
              "
              style="background-color: <%= category.color || '#6B7280' %>"
            >
              <%= category.name[0] %>
            </div>
          <% end %>
        </div>

        <div class="flex-1">
          <h3
            class="
              text-xl font-bold text-gray-900 group-hover:text-emerald-600 transition-colors
              mb-1
            "
          >
            <%= link_to category.name, devsheet_category_path(category) %>
          </h3>
          <p class="text-sm text-gray-600"><%= category.description %></p>
        </div>
      </div>

      <div class="flex items-center justify-between pt-4 border-t border-gray-100">
        <span class="text-sm text-gray-500">
          <%= category.topics_count %>
          トピック
        </span>
        <div class="flex gap-2">
          <%= link_to "JSON",
          export_json_devsheet_category_path(category),
          data: {
            turbo: false,
          },
          class: "px-3 py-1 text-xs text-blue-600 hover:bg-blue-50 rounded-lg" %>
          <%= link_to "編集",
          edit_devsheet_category_path(category),
          class: "px-3 py-1 text-xs text-emerald-600 hover:bg-emerald-50 rounded-lg" %>
          <%= button_to "削除",
          devsheet_category_path(category),
          method: :delete,
          data: {
            turbo_confirm: "本当に削除しますか？全てのトピックとセクションも削除されます。",
          },
          class: "px-3 py-1 text-xs text-red-600 hover:bg-red-50 rounded-lg" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
