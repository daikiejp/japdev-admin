<% content_for :title, "新規セクション作成 - #{@topic.name} - JapDev" %>

<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <%= link_to "← #{@topic.name}に戻る",
    devsheet_category_devsheet_topic_path(@category, @topic),
    class: "text-emerald-600 hover:text-emerald-700 font-medium" %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @topic.name %>
    - 新規セクション作成</h1>
  <p class="text-gray-600 mb-8">カテゴリ:
    <%= @category.name %></p>

  <%= render "form", category: @category, topic: @topic, section: @section %>
</div>
