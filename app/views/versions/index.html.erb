<% content_for :title, "最新バージョン - JapDev" %>

<div class="mb-12 text-center">
  <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
    最新
    <span
      class="
        bg-gradient-to-r from-emerald-600 to-teal-600 bg-clip-text text-transparent
      "
    >バージョン</span>
  </h2>
  <p class="text-lg text-gray-600 max-w-2xl mx-auto">
    人気のフレームワークとライブラリの最新リリース情報
  </p>
</div>

<div class="flex justify-between items-center mb-6">
  <h3 class="text-2xl font-bold text-gray-900">バージョン一覧</h3>
  <div class="flex gap-3">
    <%= button_to fetch_all_github_versions_path, method: :post, class: "px-4 py-2 bg-purple-500 text-white rounded-lg font-medium hover:bg-purple-600 transition-all flex items-center gap-2", data: { turbo_confirm: "全てのバージョンをGitHub APIから更新しますか？" } do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
        />
      </svg>
      全て更新
    <% end %><%= link_to "JSONエクスポート",
    export_json_versions_path,
    class:
      "px-4 py-2 bg-blue-500 text-white rounded-lg font-medium hover:bg-blue-600 transition-all" %><%= link_to "新規作成",
    new_version_path,
    class:
      "px-4 py-2 bg-gradient-to-r from-emerald-500 to-teal-600 text-white rounded-lg font-medium hover:shadow-lg transition-all" %>
  </div>
</div>

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @versions.each do |version| %>
    <div
      class="
        bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-lg
        transition-all hover:border-emerald-200 group
      "
    >
      <div class="flex items-start justify-between mb-3">
        <div class="flex-1">
          <div class="flex items-center gap-2 mb-2">
            <h3
              class="
                text-xl font-bold text-gray-900 group-hover:text-emerald-600 transition-colors
              "
            >
              <%= version.name %>
            </h3>
            <% if version.status == 'new' %>
              <span
                class="
                  px-2 py-1 bg-emerald-100 text-emerald-700 text-xs rounded-md font-medium
                "
              >NEW</span>
            <% elsif version.status == 'lts' %>
              <span
                class="
                  px-2 py-1 bg-blue-100 text-blue-700 text-xs rounded-md font-medium
                "
              >LTS</span>
            <% elsif version.status == 'stable' %>
              <span
                class="
                  px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-md font-medium
                "
              >STABLE</span>
            <% end %>
          </div>
          <p class="text-2xl font-bold text-emerald-600 mb-2"><%= version.version %></p>
          <p class="text-sm text-gray-500 mb-3"><%= version.date&.strftime("%Y年%m月%d日") %></p>
        </div>

        <% if version.stars.present? %>
          <div class="flex items-center gap-1 text-sm text-yellow-600 mb-2">
            <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
              <path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              />
            </svg>
            <%= number_to_human(
              version.stars,
              precision: 1,
              significant: false,
              units: {
                thousand: "K",
                million: "M",
              },
            ) %>
          </div>
        <% end %>
      </div>

      <% if version.repo_description.present? %>
        <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= version.repo_description %></p>
      <% end %>

      <% if version.description.present? %>
        <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= version.description %></p>
      <% end %>

      <div class="flex gap-2 mb-3">
        <% if version.repo_url.present? %>
          <%= link_to "GitHub",
          version.repo_url,
          target: "_blank",
          class:
            "text-xs px-3 py-1 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all" %>
        <% end %>
        <% if version.changelog_url.present? %>
          <%= link_to "変更履歴",
          version.changelog_url,
          target: "_blank",
          class:
            "text-xs px-3 py-1 bg-emerald-100 text-emerald-700 rounded-lg hover:bg-emerald-200 transition-all" %>
        <% end %>
      </div>

      <div class="flex gap-2 pt-3 border-t border-gray-100">
        <%= button_to "GitHub更新",
        fetch_github_version_path(version),
        method: :post,
        class:
          "px-3 py-1 text-sm text-emerald-600 hover:bg-emerald-50 rounded-lg flex-1" %>
        <%= link_to "編集",
        edit_version_path(version),
        class:
          "px-3 py-1 text-sm text-blue-600 hover:bg-blue-50 rounded-lg flex-1 text-center" %>
        <%= button_to "削除",
        version,
        method: :delete,
        data: {
          turbo_confirm: "本当に削除しますか？",
        },
        class: "px-3 py-1 text-sm text-red-600 hover:bg-red-50 rounded-lg flex-1" %>
      </div>
    </div>
  <% end %>
</div>
